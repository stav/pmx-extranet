---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AI Services Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Flexible AI Solutions for Every Business"
    subtitle="Choose the perfect AI service package that aligns with your organization's needs and goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our AI Service Packages"
    subtitle="Customized solutions for your AI journey"
    prices={[
      {
        title: 'Starter',
        subtitle: 'Perfect for small teams beginning their AI journey',
        price: 2999,
        period: 'per month',
        items: [
          {
            description: 'Basic AI Strategy Consultation',
          },
          {
            description: 'AI Readiness Assessment',
          },
          {
            description: 'Team Training (up to 5 people)',
          },
          {
            description: 'Basic AI Implementation Support',
          },
          {
            description: 'Email Support',
          },
        ],
        callToAction: {
          text: 'Get Started',
          href: '/contact',
        },
      },
      {
        title: 'Professional',
        subtitle: 'Ideal for growing organizations',
        price: 6999,
        period: 'Per Month',
        items: [
          {
            description: 'Comprehensive AI Strategy Development',
          },
          {
            description: 'Custom AI Solution Design',
          },
          {
            description: 'Team Training (up to 15 people)',
          },
          {
            description: 'AI Integration Support',
          },
          {
            description: 'Performance Monitoring',
          },
          {
            description: 'Priority Support',
          },
        ],
        callToAction: {
          text: 'Get Started',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
      {
        title: 'Enterprise',
        subtitle: 'For large organizations with complex needs',
        price: 'Custom',
        period: 'Contact Us',
        items: [
          {
            description: 'Full-Scale AI Transformation',
          },
          {
            description: 'Custom AI Development',
          },
          {
            description: 'Unlimited Team Training',
          },
          {
            description: '24/7 Dedicated Support',
          },
          {
            description: 'Custom Integration Solutions',
          },
          {
            description: 'Strategic AI Roadmap',
          },
        ],
        callToAction: {
          text: 'Contact Sales',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="What's Included in Every Package"
    subtitle="Comprehensive AI solutions with flexible options"
    columns={2}
    items={[
      {
        title: 'Expert AI Team',
        description: 'Access to our team of certified AI professionals with deep expertise in machine learning and implementation.',
        icon: 'tabler:users',
      },
      {
        title: 'Customized Solutions',
        description: 'Tailored AI solutions designed to meet your specific business needs and challenges.',
        icon: 'tabler:tools',
      },
      {
        title: 'Ongoing Support',
        description: 'Continuous support and maintenance to ensure your AI solutions remain effective and up-to-date.',
        icon: 'tabler:headset',
      },
      {
        title: 'Security & Compliance',
        description: 'Comprehensive security measures and compliance frameworks to protect your AI solutions.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Performance Monitoring',
        description: 'Regular monitoring and optimization of your AI solutions to ensure maximum value.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Training & Knowledge Transfer',
        description: 'Comprehensive training programs to ensure your team can effectively use and maintain AI solutions.',
        icon: 'tabler:school',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Your Path to AI Success"
    tagline="Implementation Process"
    isReversed={true}
    items={[
      {
        title: 'Initial Consultation',
        icon: 'tabler:message',
      },
      {
        title: 'Needs Assessment',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Solution Design',
        icon: 'tabler:bulb',
      },
      {
        title: 'Implementation',
        icon: 'tabler:rocket',
      },
      {
        title: 'Training & Support',
        icon: 'tabler:school',
      },
      {
        title: 'Monitoring & Optimization',
        icon: 'tabler:chart-bar',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'AI Implementation Process',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Have questions about our AI service packages? We're here to help you choose the right solution for your needs."
    columns={1}
    items={[
      {
        title: 'Do you offer custom pricing for specific needs?',
        description:
          'Yes, we understand that every organization has unique requirements. Our Enterprise package is fully customizable, and we can also create custom solutions for specific needs.',
      },
      {
        title: 'What kind of support is included?',
        description:
          'Support levels vary by package. Starter includes email support, Professional includes priority support, and Enterprise includes 24/7 dedicated support with a dedicated account manager.',
      },
      {
        title: 'Can I upgrade or downgrade my package?',
        description:
          'Yes, you can change your package at any time. We will work with you to ensure a smooth transition and adjust your services accordingly.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept major credit cards, bank transfers, and can accommodate enterprise payment terms for larger organizations.',
      },
      {
        title: 'Is there a minimum contract length?',
        description:
          'Our packages are available on a month-to-month basis, but we offer discounted rates for annual commitments. Enterprise solutions may have custom terms based on project scope.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to Transform Your Business with AI?"
    subtitle="Schedule a consultation with our AI experts to discuss your needs and find the perfect solution for your organization."
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Consultation',
        href: '/contact',
      },
    ]}
  />
</Layout>
