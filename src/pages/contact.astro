---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact PMX Services',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText 
    tagline="Contact Us" 
    title="Let's Discuss Your AI Journey" 
    subtitle="Ready to transform your business with AI? Our team of experts is here to help you navigate the path to AI success."
  />

  <ContactUs
    id="form"
    title="Schedule a Consultation"
    subtitle="Tell us about your AI needs and challenges. Our team will get back to you within 24 hours to discuss how we can help transform your business."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
      {
        type: 'text',
        name: 'service',
        label: 'Service Interest',
        placeholder: 'AI Education & Training, AI Strategy Consulting, AI Integration, etc.',
      },
    ]}
    textarea={{
      label: 'Tell us about your AI needs and challenges',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree to our privacy policy and consent to being contacted about our AI services.',
    }}
    description="Our AI experts typically respond within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How Can We Help You?"
    items={[
      {
        title: 'AI Strategy Consultation',
        description: `Schedule a consultation to discuss your AI strategy, implementation roadmap, and how our solutions can help achieve your business goals.`,
        icon: 'tabler:bulb',
      },
      {
        title: 'Technical Support',
        description:
          'Get assistance with your existing AI solutions, implementation challenges, or technical questions about our services.',
        icon: 'tabler:headset',
      },
      {
        title: 'Training Inquiries',
        description:
          'Learn more about our AI training programs and how we can help upskill your team in artificial intelligence technologies.',
        icon: 'tabler:school',
      },
      {
        title: 'Phone',
        description: '+1 (216) 666-0300',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'pmx@primesite.dev',
        icon: 'tabler:mail',
      },
      {
        title: 'Headquarters',
        description: 'Cleveland, Ohio, USA',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
