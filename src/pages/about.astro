---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About PMX Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'PMX Services Team',
    }}
  >
    <Fragment slot="title">
      Leading the Future of <br />
      <span class="text-accent dark:text-white">AI Innovation</span>
    </Fragment>

    <Fragment slot="subtitle">
      PMX Services is a premier provider of AI education, consulting, and integration services. With over a decade of experience, 
      we help organizations harness the power of artificial intelligence to drive innovation, efficiency, and growth. Our team of 
      experts combines deep technical knowledge with practical business acumen to deliver transformative AI solutions.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact"
    stats={[
      { title: 'AI Projects', amount: '150+' },
      { title: 'Expert Team', amount: '25+' },
      { title: 'Industries Served', amount: '12+' },
      { title: 'Years Experience', amount: '10+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Core Services"
    subtitle="We offer comprehensive AI solutions designed to meet your organization's unique needs and challenges."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'AI Education',
        description:
          'Comprehensive training programs covering AI fundamentals, implementation strategies, and advanced techniques for teams at all levels.',
        icon: 'tabler:school',
      },
      {
        title: 'AI Consulting',
        description:
          'Expert guidance on AI strategy, implementation, and optimization to help you make informed decisions and maximize ROI.',
        icon: 'tabler:bulb',
      },
      {
        title: 'AI Integration',
        description:
          'Seamless integration of AI solutions into your existing systems and workflows, ensuring smooth adoption and optimal performance.',
        icon: 'tabler:code',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Custom AI Solutions',
        description:
          'Tailored AI solutions designed to address your specific business challenges and drive measurable results.',
        icon: 'tabler:tools',
      },
      {
        title: 'AI Strategy',
        description:
          'Comprehensive AI strategy development aligned with your business goals and market opportunities.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Ongoing Support',
        description:
          'Continuous support and maintenance to ensure your AI solutions remain effective and up-to-date.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AI Innovation',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="Our core values guide everything we do, from how we work with clients to how we develop and deliver AI solutions."
    items={[
      {
        title: 'Client Success First',
        description:
          'We measure our success by the success of our clients. Every solution we develop is designed to deliver measurable business value and drive growth.',
      },
      {
        title: 'Innovation & Excellence',
        description:
          'We stay at the forefront of AI technology, continuously learning and innovating to deliver cutting-edge solutions that give our clients a competitive edge.',
      },
      {
        title: 'Ethical AI',
        description:
          'We are committed to developing and implementing AI solutions that are ethical, transparent, and aligned with industry best practices and regulations.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Achievements"
    subtitle="Our track record of success speaks to our expertise and commitment to delivering exceptional results."
    isReversed={true}
    callToAction={{
      text: 'View Case Studies',
      href: '/case-studies',
    }}
    items={[
      {
        title: 'Industry Recognition',
        description: 'Recognized as a leading provider of AI solutions, with numerous industry awards and certifications.',
        icon: 'tabler:award',
      },
      {
        title: 'Client Satisfaction',
        description:
          'Consistently high client satisfaction ratings, with many long-term partnerships and successful project deliveries.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Global Impact',
        description:
          'Successfully implemented AI solutions across multiple industries and regions, helping organizations worldwide achieve their digital transformation goals.',
        icon: 'tabler:globe',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Global Presence"
    tagline="Locations"
    columns={4}
    items={[
      {
        title: 'North America',
        description: 'Headquarters and Innovation Center',
      },
      {
        title: 'Europe',
        description: 'Regional Office and Training Center',
      },
      {
        title: 'Asia Pacific',
        description: 'Regional Office and Research Lab',
      },
      {
        title: 'Middle East',
        description: 'Regional Office and Support Center',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    tagline="Contact Us"
    columns={2}
    items={[
      {
        title: 'Schedule a Consultation',
        description:
          'Ready to transform your business with AI? Schedule a consultation with our experts to discuss your needs and explore how we can help.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Technical Support',
        description:
          'Need assistance with your AI solutions? Our dedicated support team is available to help you resolve any issues and ensure optimal performance.',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
