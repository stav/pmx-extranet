---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'AI Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Our Services"
    title="Transform Your Business with AI Solutions"
    subtitle="From education and consulting to implementation and support, we provide comprehensive AI services to help your organization thrive in the digital age."
    actions={[{ variant: 'primary', text: 'Schedule Consultation', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AI Innovation',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our AI Service Portfolio"
    subtitle="Comprehensive solutions designed to meet your organization's unique needs"
    columns={3}
    items={[
      {
        title: 'AI Education & Training',
        description:
          'Comprehensive training programs covering AI fundamentals, implementation strategies, and advanced techniques. Designed for teams at all levels, from beginners to advanced practitioners.',
        icon: 'tabler:school',
      },
      {
        title: 'AI Strategy Consulting',
        description:
          'Expert guidance on developing and implementing AI strategies aligned with your business goals. We help you identify opportunities, assess risks, and create a roadmap for success.',
        icon: 'tabler:bulb',
      },
      {
        title: 'AI Integration',
        description: `Seamless integration of AI solutions into your existing systems and workflows. We ensure smooth adoption and optimal performance while minimizing disruption to your operations.`,
        icon: 'tabler:code',
      },
      {
        title: 'Custom AI Development',
        description:
          'Tailored AI solutions designed to address your specific business challenges. Our team develops custom models and applications that deliver measurable results.',
        icon: 'tabler:tools',
      },
      {
        title: 'AI Implementation',
        description:
          'End-to-end implementation of AI solutions, from initial setup to full deployment. We handle the technical details while you focus on your business.',
        icon: 'tabler:rocket',
      },
      {
        title: 'AI Support & Maintenance',
        description:
          'Ongoing support and maintenance to ensure your AI solutions remain effective and up-to-date. Our team is always available to help you resolve issues and optimize performance.',
        icon: 'tabler:headset',
      },
      {
        title: 'AI Security & Compliance',
        description:
          'Comprehensive security measures and compliance frameworks to protect your AI solutions. We ensure your systems meet industry standards and regulatory requirements.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'AI Performance Monitoring',
        description:
          'Continuous monitoring and optimization of your AI solutions. We track performance metrics and make adjustments to ensure maximum value.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'AI Innovation Lab',
        description:
          'Access to cutting-edge AI technologies and research. Stay ahead of the curve with our innovation lab, where we explore emerging trends and develop new solutions.',
        icon: 'tabler:flask',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Expert Team',
        description:
          'Our team consists of certified AI professionals with deep expertise in machine learning, deep learning, and AI implementation.',
        icon: 'tabler:users',
      },
      {
        title: 'Proven Methodology',
        description:
          'We follow a structured approach to AI implementation that ensures successful outcomes and measurable results.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Industry Experience',
        description:
          'Years of experience implementing AI solutions across various industries, from startups to enterprises.',
        icon: 'tabler:building',
      },
      {
        title: 'Continuous Support',
        description:
          'Ongoing support and maintenance to ensure your AI solutions remain effective and up-to-date.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1525909002-1b05e0c869d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'AI Expertise',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose Us</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Increased Efficiency',
        description:
          'Automate routine tasks and streamline processes to improve productivity and reduce operational costs.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Better Decision Making',
        description:
          'Leverage AI-powered insights to make data-driven decisions and stay ahead of the competition.',
        icon: 'tabler:brain',
      },
      {
        title: 'Enhanced Innovation',
        description:
          'Access cutting-edge AI technologies and stay at the forefront of innovation in your industry.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Competitive Advantage',
        description:
          'Gain a competitive edge by implementing AI solutions that transform your business operations.',
        icon: 'tabler:target',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664688-cf412ec27db2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'AI Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Benefits of AI Implementation</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Client Success Stories"
    testimonials={[
      {
        testimonial: `PMX Services transformed our business with their AI solutions. Their expertise and guidance helped us implement AI effectively, resulting in significant efficiency gains and cost savings.`,
        name: 'Dr. Sarah Chen',
        job: 'CTO, TechInnovate',
        image: {
          src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'Dr. Sarah Chen',
        },
      },
      {
        testimonial: `The AI training program provided by PMX Services was exceptional. Our team gained valuable skills and knowledge that have helped us leverage AI effectively in our operations.`,
        name: 'Michael Rodriguez',
        job: 'Director of Innovation, Global Solutions',
        image: {
          src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Michael Rodriguez',
        },
      },
      {
        testimonial: `Working with PMX Services has been a game-changer for our organization. Their AI integration services helped us modernize our systems and improve our decision-making processes.`,
        name: 'Lisa Thompson',
        job: 'CEO, FutureTech',
        image: {
          src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Lisa Thompson',
        },
      },
    ]}
    callToAction={{
      text: 'View More Case Studies',
      href: '/case-studies',
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Schedule a Consultation',
        href: '/contact',
      },
    ]}
    title="Ready to Transform Your Business with AI?"
    subtitle="Contact us today to discuss how our AI solutions can help you achieve your business goals."
  />
</Layout>
