---
import Layout from '../layouts/PageLayout.astro';
import WidgetWrapper from '../components/ui/WidgetWrapper.astro';
import Image from '../components/common/Image.astro';
import Hero from '../components/widgets/Hero.astro';
import CallToAction from '../components/widgets/CallToAction.astro';

const metadata = {
  title: 'Case Studies â€” PMX Services',
  description: 'Explore our successful AI implementation case studies and see how we\'ve helped organizations transform their operations.',
};

const caseStudies = [
  {
    title: 'AI-Powered Customer Service Transformation',
    description: 'How we helped a leading financial institution implement AI chatbots to improve customer service efficiency by 40%.',
    image: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    industry: 'Financial Services',
    results: ['40% improvement in response time', '30% reduction in customer wait times', '25% increase in customer satisfaction'],
  },
  {
    title: 'Predictive Maintenance Implementation',
    description: 'A manufacturing company reduced equipment downtime by 60% through our AI-powered predictive maintenance solution.',
    image: 'https://images.unsplash.com/photo-1581092921461-39b9d08a9b21?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    industry: 'Manufacturing',
    results: ['60% reduction in equipment downtime', '45% decrease in maintenance costs', '35% increase in operational efficiency'],
  },
  {
    title: 'AI-Driven Supply Chain Optimization',
    description: 'How we helped a retail chain optimize their supply chain using AI, resulting in 35% reduction in inventory costs.',
    image: 'https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    industry: 'Retail',
    results: ['35% reduction in inventory costs', '50% improvement in delivery accuracy', '40% decrease in stockouts'],
  },
];

---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Case Studies"
    image={{
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'AI Implementation Success Stories',
    }}
  >
    <Fragment slot="title">
      Real-World <br />
      <span class="text-accent dark:text-white">AI Success Stories</span>
    </Fragment>

    <Fragment slot="subtitle">
      Discover how organizations across industries have transformed their operations and achieved remarkable results through our AI solutions. 
      Each case study demonstrates the tangible impact of AI implementation on business performance and customer experience.
    </Fragment>
  </Hero>

  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-6xl">
    <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-3 mt-12">
      {
        caseStudies.map((study) => (
          <WidgetWrapper
            classes={{
              container: 'h-full',
            }}
          >
            <div class="relative h-48 mb-6 overflow-hidden rounded-lg">
              <Image
                src={study.image}
                class="w-full h-full object-cover"
                alt={study.title}
                width={400}
                height={300}
              />
            </div>
            <div class="mb-4">
              <span class="inline-block px-3 py-1 text-sm font-medium text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900 dark:text-blue-200">
                {study.industry}
              </span>
            </div>
            <h3 class="text-xl font-bold mb-2">{study.title}</h3>
            <p class="text-muted dark:text-slate-400 mb-4">{study.description}</p>
            <ul class="space-y-2">
              {study.results.map((result) => (
                <li class="flex items-center">
                  <svg
                    class="w-4 h-4 mr-2 text-green-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  {result}
                </li>
              ))}
            </ul>
          </WidgetWrapper>
        ))
      }
    </div>

    <CallToAction
      title="Ready to Transform Your Business with AI?"
      subtitle="Let's discuss how our AI solutions can help you achieve your business goals."
      actions={[
        {
          variant: 'primary',
          text: 'Contact Us',
          href: '/contact',
          icon: 'tabler:mail',
        },
      ]}
    />
  </section>
</Layout> 
