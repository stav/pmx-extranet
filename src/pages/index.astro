---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'PMX Services â€” AI Education, Consulting & Integration',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:mail',
      },
      { text: 'Our Services', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'PMX Services Hero Image' }}
  >
    <Fragment slot="title">
      Transforming Businesses with <span class="text-accent dark:text-white">AI Solutions</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">PMX Services</span> specializes in AI education, consulting, and integration services.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">PMX Services: AI Experts.</span>
      Empowering organizations with cutting-edge AI solutions, expert guidance, and comprehensive training programs to drive innovation and growth.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Our Mission:" description="Empowering Organizations Through AI Innovation" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Services"
    title="Comprehensive AI Solutions"
    subtitle="We provide end-to-end AI services to help your organization leverage the power of artificial intelligence effectively and responsibly."
    items={[
      {
        title: 'AI Education & Training',
        description:
          'Comprehensive training programs designed to upskill your team in AI technologies, from fundamentals to advanced implementation.',
        icon: 'tabler:school',
      },
      {
        title: 'AI Consulting',
        description:
          'Expert guidance on AI strategy, implementation, and optimization to help you make informed decisions and maximize ROI.',
        icon: 'tabler:bulb',
      },
      {
        title: 'AI Integration',
        description:
          'Seamless integration of AI solutions into your existing systems and workflows, ensuring smooth adoption and optimal performance.',
        icon: 'tabler:code',
      },
      {
        title: 'Custom AI Solutions',
        description:
          'Tailored AI solutions designed to address your specific business challenges and drive measurable results.',
        icon: 'tabler:tools',
      },
      {
        title: 'AI Strategy Development',
        description:
          'Comprehensive AI strategy development aligned with your business goals and market opportunities.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Ongoing Support',
        description:
          'Continuous support and maintenance to ensure your AI solutions remain effective and up-to-date with the latest advancements.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Choose Us"
    title="Expertise Meets Innovation"
    items={[
      {
        title: 'Industry Experience',
        description:
          'Years of experience in implementing AI solutions across various industries, from startups to enterprises.',
      },
      {
        title: 'Expert Team',
        description:
          'Our team consists of certified AI professionals with deep expertise in machine learning, deep learning, and AI implementation.',
      },
      {
        title: 'Proven Methodology',
        description:
          'A structured approach to AI implementation that ensures successful outcomes and measurable results.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'AI Innovation',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Your AI Journey Starts Here</h3>
      Partner with us to transform your business with AI
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Customized Training Programs',
        description: `Tailored AI education programs designed to meet your team's specific needs and skill levels.`,
      },
      {
        title: 'Strategic Consulting',
        description:
          'Expert guidance on AI implementation, helping you make informed decisions and avoid common pitfalls.',
      },
      {
        title: 'Seamless Integration',
        description:
          'Smooth integration of AI solutions into your existing systems, ensuring minimal disruption to your operations.',
      },
      {
        title: 'Continuous Support',
        description:
          'Ongoing support and maintenance to ensure your AI solutions remain effective and up-to-date.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'AI Solutions',
    }}
  >
    <Fragment slot="content">Comprehensive AI Solutions for Your Business</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Your Path to AI Success"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Assessment</span>',
        description:
          "We begin with a thorough assessment of your organization's needs, goals, and current capabilities to develop a tailored AI strategy.",
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Step 2: <span class="font-medium">Strategy Development</span>',
        description:
          "Together, we develop a comprehensive AI strategy aligned with your business objectives and market opportunities.",
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Step 3: <span class="font-medium">Implementation</span>',
        description:
          'We implement the chosen AI solutions, providing training and support throughout the process to ensure successful adoption.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Step 4: <span class="font-medium">Optimization</span>',
        description:
          'Continuous monitoring and optimization of your AI solutions to ensure they deliver maximum value and stay current with advancements.',
        icon: 'tabler:chart-bar',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'AI Implementation Steps',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our AI Solutions"
    subtitle="Comprehensive AI services designed to transform your business"
    tagline="Solutions"
    items={[
      {
        title: 'AI Strategy',
        description: "Develop a clear roadmap for AI implementation aligned with your business goals and objectives.",
        icon: 'flat-color-icons:template',
      },
      {
        title: 'AI Training',
        description: "Comprehensive training programs to upskill your team in AI technologies and best practices.",
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'AI Integration',
        description: 'Seamless integration of AI solutions into your existing systems and workflows.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Custom Development',
        description: "Tailored AI solutions designed to address your specific business challenges and requirements.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'AI Consulting',
        description: 'Expert guidance on AI implementation, optimization, and best practices.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Support & Maintenance',
        description: 'Ongoing support and maintenance to ensure your AI solutions remain effective and up-to-date.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Performance Monitoring',
        description: 'Continuous monitoring and optimization of AI solutions to ensure maximum value.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Security & Compliance',
        description: 'Ensure your AI solutions meet industry standards and regulatory requirements.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Innovation Lab',
        description: "Stay ahead of the curve with access to cutting-edge AI technologies and research.",
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Latest Insights from Our Blog"
    information={`Stay updated with the latest trends, insights, and best practices in AI technology.
                  Our blog features expert analysis, case studies, and practical guides to help you
                  navigate the world of artificial intelligence.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Get answers to common questions about our AI services and solutions"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What AI services do you offer?',
        description:
          "We offer comprehensive AI services including education and training, consulting, integration, custom development, and ongoing support. Our team of experts helps organizations implement and optimize AI solutions to drive business growth and innovation.",
      },
      {
        title: 'How can AI benefit my business?',
        description:
          "AI can transform your business by automating processes, improving decision-making, enhancing customer experiences, and driving innovation. Our team will help you identify specific opportunities where AI can add value to your organization.",
      },
      {
        title: 'What is your approach to AI implementation?',
        description:
          "We follow a structured approach that begins with assessment, followed by strategy development, implementation, and ongoing optimization. This ensures successful adoption and maximum return on your AI investment.",
      },
      {
        title: "Do you provide AI training for teams?",
        description:
          "Yes, we offer customized AI training programs designed to upskill your team. Our training covers everything from AI fundamentals to advanced implementation, ensuring your team has the knowledge and skills needed to succeed.",
      },
      {
        title: 'How do you ensure AI solution security?',
        description:
          "Security is a top priority. We implement robust security measures and ensure compliance with industry standards and regulations. Our solutions are designed with data protection and privacy in mind.",
      },
      {
        title: 'What industries do you serve?',
        description:
          "We serve organizations across various industries, from startups to enterprises. Our AI solutions are adaptable to different business needs and can be customized for specific industry requirements.",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Projects Completed', amount: '150+' },
      { title: 'Clients Served', amount: '50+' },
      { title: 'Team Members', amount: '25+' },
      { title: 'Years Experience', amount: '10+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Transform Your Business with AI?
    </Fragment>

    <Fragment slot="subtitle">
      Let's discuss how our AI solutions can help you achieve your business goals. <br class="hidden md:inline" />
      Contact us today to schedule a consultation.
    </Fragment>
  </CallToAction>
</Layout>
